<main>
    <h2>HOME</h2>

    {{#each book}}
    <div class="book">
        <h3>Título: {{this.title}}</h3>
        <p>Quantidade de páginas: {{this.pageqty}}</p>

        <div class="buttons">
            <a href="/book/{{this.id_book}}" class="mais">Ver mais</a>
            <a href="/edit/{{this.id_book}}" class="editar">Editar</a>
        </div>
    </div>
    {{/each}}
</main>